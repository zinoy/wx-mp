- content_for :ribbon do
  / RIBBON
  #ribbon
    / breadcrumb
    %ol.breadcrumb
      %li Home
      %li Series Number Generator
    / end breadcrumb

  / END RIBBON

/ #MAIN CONTENT
#content
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-4
      %h1.page-title.txt-color-blueDark
        / PAGE HEADER
        %i.fa-fw.fa.fa-comments
        Series Number
        %span
          \&gt;
          Batch
  .row
    .col-sm-12
      - unless @batch.empty?
        .table-responsive
          %table.table.table-striped.table-hover.dataTable.no-footer
            %thead
              %tr
                %th ID
                %th Summary
                %th Time
            %tbody
              - @batch.each do |batch|
                %tr
                  %td= batch.id
                  %td= batch.summary
                  %td= batch.created_at.strftime("%Y-%m-%d %H:%M:%S")
      - else
        .well
          %p.alert.alert-info
            %i.fa.fa-info
            No batch found!
      .col-xs-12.col-sm-6
        = will_paginate @batch

/ END #MAIN CONTENT
